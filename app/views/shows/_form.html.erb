    <%= f.label :picture %><br>
    <%= f.text_field :picture %>
  </div>
  <div class="field">
    <%= f.label :desc %><br>
    <%= f.text_area :desc %>
  </div>
  <div class="field">
    <%= f.label :opened %><br>
    <%= f.date_select :opened, {:order => [:month, :day, :year],:prompt => true, :start_year =>1950, :end_year => Time.now.year} %>
  </div>
